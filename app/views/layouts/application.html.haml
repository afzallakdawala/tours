!!! 5
%html
  %head
    %title= "Online Haj, Umrah, Ziyarat search engine in India @ holyhuz"
    %meta{ :content => "Haj tour search, Umrah tour search, Ziyarat tour search, Haj availability, Umrah availability, Ziyarat availability, Pilgrim tour operator, Hajj, Umrah, Ziyarat service provider, India haj umrah ziyarat tour service provider, Haji search, Haji, Hajj, Umra, India haj or hajj tour operator, India umrah tour operator, India ziyarat tour operator ", :name => "description" }    
    %meta{ :content => "Tour operator from to tirupathi,Calicut,mumbai, bangalore, hyderabad, Vizag, Vijayawada, Trichy, Madurai, Coimbatore, delhi, gujrat, maharashtra, kashmir,  cheap fare,discount ,travel,online reservations", :name=>"abstract"}
    %meta{ :content => "Afzal-lakdawala", :name => "author" }
    %meta{ :content => "width=device-width, initial-scale=1.0", :name => "viewport" }
    = stylesheet_link_tag "application", :media => 'all'
    %link{:href => '//netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css', :type=>'text/css', :rel => 'stylesheet' }/
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    -if !session[:user_id].blank?
      .container
        .row{:style=>"margin-top:45px"}
          .navbar.navbar-fixed-top
            .navbar-inner
              .container
                %ul.nav.nav-pills
                  %li
                    %a.brand{:href => '#'} 
                      = session[:user_name]
                  %li.divider-vertical                    |
                  %li                    
                    %a{:href => tours_path} Create Tour
                  %li.divider-vertical  
                  %li
                    %a{:href => edit_user_path(session[:user_id])} Settings                    
                  %li.divider-vertical
                  -if session[:user_admin]
                    %li                    
                      %a{:href => tours_admin_path} Admin Access
                    %li.divider-vertical    
                    %li                    
                      %a{:href => users_verification_path} User Access
                    %li.divider-vertical                                        
                  %li
                    %a{:href => tours_logout_path} Logout
    -else
      .container
        .row
          .span4
            =image_tag "home-icon.png", :height => "50", :width => "50"
            %a{:href => home_index_path, :style=> "font-size:34px;color:#228B22;background-color:white;"}
              %strong Holyhuz.com
              %span.label.label-important  Beta
          .span8
            .navbar.pull-right
              .navbar-inner
                .container
                  %a{:href=> users_login_path, :class=>'btn btn-success'} Operator Login
                  %strong OR
                  %a{:href=> new_user_path, :class=>'btn btn-primary'} Operator Sign Up
    %div#wrap                      
      .container
        = yield
    .container
      = render :partial => 'layouts/footer'
