.container
  .row      
    .span12  
      - if !notice.blank?
        .alert.alert-info
          %button.close{ "data-dismiss" => "alert" }x
          =notice
      %h1 All Tours   
      %table.table.table-hover.table-bordered
        %tr
          %th
            Type
          %th
            Depature date
          %th
            No. days
          %th
            About tours
          %th
            Availibility
          %th
            Status
          %th
            = link_to "Add", new_tour_path, :class => "btn btn-success"
        - if @tours    
          - @tours.each  do |tour| 
            %tr
              %td
                %strong
                  -if tour.pilgrim_type == 1 
                    Haj  
                  -elsif tour.pilgrim_type == 2 
                    Umrah
                  -elsif tour.pilgrim_type == 3
                    Ziyarat
                  -else
                    **Invalid input**
              %td
                = tour.depature_date.strftime("%a %d-%B-%Y")
              %td
                = tour.days
              %td
                = tour.about
              %td
                = tour.available              
              %td
                -if tour.status <= 0
                  %span.label.label-important Pending
                -else
                  %span.label.label-success Running     
              //= operator.mobile
              %td
                = link_to "Edit", edit_tour_path(tour), :class => "btn btn-primary" 
              
      = will_paginate @tours 
                 